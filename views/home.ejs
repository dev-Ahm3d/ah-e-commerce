<%- include('staticParts/header') %>
<%- include('staticParts/navbar') %>

<div class="container" style="margin-top: 10px;">
    <form action="/" method="GET">
        <select name="category" class="custom-select">
            <option selected>Categories</option>
            <option value="all">All</option>
            <option value="phones">Phones</option>
            <option value="labtops">Labtops</option>
        </select>
        <button style="margin-top: 5px; " class="btn btn-primary">Filter</button>
     </form> 
</div>

<% if(amountErrs && amountErrs.length !=0){ %> 
    <div style="margin-top: 15px;" class="alert alert-danger alert-dismissible fade show container" role="alert">
        <strong>Error !! </strong> <%= amountErrs[0].msg  %>  
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
<% } %> 

<div class="container" style="margin-top: 50px;">
    <div class="row">
        <% if(products) { %>
            <% for(let product of products) { %> 
                    <div class="card col-xs-12 col-sm-6 col-md-4 col-lg-3 " style=" width: 18rem; border: hidden;background-color: rgb(247, 244, 244);
                    margin: 5px auto; border-radius: 10px;" >
                        <img  src="<%= product.imageUrl  %>" style="height: 200px;" class="card-img-top" alt="...">
                        <div class="card-body">
                          <h5 class="card-title"> <a href='/products/<%= product._id %> '> <%= product.name %> </a> </h5>
                          <h5 class="card-title">Price : <%= product.price %> $</h5>
                          <form action="/cart" method="POST">
                            <input type="number" placeholder="amount" name="amount" class="form-control">
                            <input hidden type="text" name="name" value="<%= product.name %>">
                            <input hidden type="text" name="price" value="<%= product.price %>">
                            <input hidden type="text" name="imageUrl" value="<%= product.imageUrl %>">
                            <input style="margin-top: 10px;" type="submit" value="Add To Cart" class="btn btn-primary">
                          </form>
                        </div>
                    </div>
            <% } %> 
        <% } %>   
    </div>
</div>

<%- include('staticParts/footer') %>




    





