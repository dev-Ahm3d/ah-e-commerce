<%- include('staticParts/header.ejs') %>
<%- include('staticParts/navbar.ejs') %>

<div class="container text-center">
    <h2>Sign-In</h2>
    <div class="text-center">
        <form action="/login" method="POST">
            <input type="text" placeholder="Email" name="email" class="form-control" >
            <% if(vErrors !== undefined){ %> 
                <% if(vErrors.length != 0) { %>
                    <% let emailErrs = vErrors.filter(element => element.param=='email') %>
                    <% for(let i=0 ; i<emailErrs.length ; i++) { %>
                        <p class="alert alert-danger" style="margin-top: 10px;"> <%= emailErrs[i].msg %>  </p>
                    <% } %> 
            <% }} %> 


            <input type="password" placeholder="Password" name="pass" class="form-control" style="margin-top: 5px;">
            <% if(vErrors !== undefined){ %> 
                <% if(vErrors && vErrors.length != 0) { %>
                    <% let passErrs = vErrors.filter(element => element.param=='pass') %>
                    <% for(let i=0 ; i<passErrs.length ; i++) { %>
                        <p class="alert alert-danger" style="margin-top: 10px;"> <%= passErrs[i].msg %>  </p>
                <% } %> 
            <% }} %> 


            <input type="submit" value="Login" class="btn btn-primary" style="margin-top: 10px;">
        </form>
    </div>

    <% if(loginErr){ %> 
        <p class="alert alert-danger" style="margin-top: 10px;"> <%= loginErr %> </p>
    <% } %> 
   
</div>


<%- include('staticParts/footer.ejs') %>
